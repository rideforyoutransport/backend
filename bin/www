
 /**
 * Module dependencies.
 */


 var app = require('../app');
 var debug = require('debug')('ride4utransport:server');
 var http = require('http');


const PocketBase = require('pocketbase/cjs')

 /**
  * Get port from environment and store in Express.
  */

  
 var server_port = normalizePort(process.env.SERVER_PORT || '3003');
 var pb_port =  normalizePort(process.env.PB_PORT || '8090');
 app.set('port', server_port);
 

// start pocketbase 
const pb = new PocketBase(pb_port);




 
 /**
  * Create HTTP server.
  */
 
 var server = http.createServer(app);
 /**
  * Listen on provided port, on all network interfaces.
  */
//  const socketIo = require("socket.io")(server, {
//   cors: {
//     origin: '*',
//   }
// });

const io = require('socket.io')(server, {
  cors: {
    origin: '*',
  }
});
//  const io = socketIo(server);
let interval;

 io.on("connection", (socket) => {
  console.log("New client connected");
  if (interval) {
    clearInterval(interval);
  }
  interval = setInterval(() => getApiAndEmit(socket), 1000);
  socket.on("disconnect", () => {
    console.log("Client disconnected");
    clearInterval(interval);
  });
});


const getApiAndEmit = socket => {
  const response = new Date();
  // Emitting a new message. Will be consumed by the client
  
// pb message collection call along with action and the auth of users 


  socket.emit("FromAPI", response);
};
 server.listen(server_port);
 server.on('error', onError);
 server.on('listening', onListening);
 
 /**
  * Normalize a port into a number, string, or false.
  */
 
 function normalizePort(val) {
   var port = parseInt(val, 10);
 
   if (isNaN(port)) {
     // named pipe
     return val;
   }
 
   if (port >= 0) {
     // port number
     return port;
   }
 
   return false;
 }
 
 /**
  * Event listener for HTTP server "error" event.
  */
 
 function onError(error) {
   if (error.syscall !== 'listen') {
     throw error;
   }
 
   var bind = typeof port === 'string'
     ? 'Pipe ' + port
     : 'Port ' + port;
 
   // handle specific listen errors with friendly messages
   switch (error.code) {
     case 'EACCES':
       console.error(bind + ' requires elevated privileges');
       process.exit(1);
       break;
     case 'EADDRINUSE':
       console.error(bind + ' is already in use');
       process.exit(1);
       break;
     default:
       throw error;
   }
 }
 

 /**
  * Event listener for HTTP server "listening" event.
  */
 
 function onListening() {
   var addr = server.address();
   var bind = typeof addr === 'string'
     ? 'pipe ' + addr
     : 'port ' + addr.port;
 
   debug('Listening on ' + bind);
   console.log('Listening on ' + bind);
 }





